<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.example.collectingdialect.ui.collecting.interview.CollectingInterviewViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_light"
            android:scaleType="centerCrop"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/interview_title_layout"
            android:layout_width="270dp"
            android:layout_height="120dp"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:id="@+id/main_title_line_top"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#1f9eff"/>

            <TextView
                android:id="@+id/region_select_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/interview_title"
                android:fontFamily="@font/a_gothic_17"
                android:textAlignment="center"
                android:textColor="#1f9eff"
                android:textSize="35sp"/>

            <View
                android:id="@+id/main_title_line_bottom"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#1f9eff"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/interview_unit_text"
            android:layout_width="300dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toBottomOf="@id/interview_title_layout"
            app:layout_constraintBottom_toTopOf="@id/question_instruction_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/script_unit"/>

        <TextView
            android:id="@+id/question_instruction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/interview_unit_text"
            app:layout_constraintBottom_toTopOf="@id/question_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/interview_instruction"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/question_layout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/question_instruction_text"
            app:layout_constraintBottom_toTopOf="@id/sound_wave_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:id="@+id/question_1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/question_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/recode_button_1"
                android:layout_marginVertical="@dimen/interview_question_vertical_margin"
                android:background="@drawable/interview_q1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/recode_button_1"
                android:layout_width="@dimen/button_size_small"
                android:layout_height="@dimen/button_size_small"
                app:layout_constraintTop_toTopOf="@id/question_1"
                app:layout_constraintBottom_toBottomOf="@id/question_1"
                app:layout_constraintStart_toEndOf="@id/question_1"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/recode"/>

            <View
                android:id="@+id/question_2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/question_1"
                app:layout_constraintBottom_toTopOf="@id/question_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/recode_button_2"
                android:layout_marginVertical="@dimen/interview_question_vertical_margin"
                android:background="@drawable/interview_q2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/recode_button_2"
                android:layout_width="@dimen/button_size_small"
                android:layout_height="@dimen/button_size_small"
                app:layout_constraintTop_toTopOf="@id/question_2"
                app:layout_constraintBottom_toBottomOf="@id/question_2"
                app:layout_constraintStart_toEndOf="@id/question_2"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/recode"/>

            <View
                android:id="@+id/question_3"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/question_2"
                app:layout_constraintBottom_toTopOf="@id/question_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/recode_button_3"
                android:layout_marginVertical="@dimen/interview_question_vertical_margin"
                android:background="@drawable/interview_q3"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/recode_button_3"
                android:layout_width="@dimen/button_size_small"
                android:layout_height="@dimen/button_size_small"
                app:layout_constraintTop_toTopOf="@id/question_3"
                app:layout_constraintBottom_toBottomOf="@id/question_3"
                app:layout_constraintStart_toEndOf="@id/question_3"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/recode"/>

            <View
                android:id="@+id/question_4"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/question_3"
                app:layout_constraintBottom_toTopOf="@id/question_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/recode_button_4"
                android:layout_marginVertical="@dimen/interview_question_vertical_margin"
                android:background="@drawable/interview_q4"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/recode_button_4"
                android:layout_width="@dimen/button_size_small"
                android:layout_height="@dimen/button_size_small"
                app:layout_constraintTop_toTopOf="@id/question_4"
                app:layout_constraintBottom_toBottomOf="@id/question_4"
                app:layout_constraintStart_toEndOf="@id/question_4"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/recode"/>

            <View
                android:id="@+id/question_5"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/question_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/recode_button_5"
                android:layout_marginVertical="@dimen/interview_question_vertical_margin"
                android:background="@drawable/interview_q5"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/recode_button_5"
                android:layout_width="@dimen/button_size_small"
                android:layout_height="@dimen/button_size_small"
                app:layout_constraintTop_toTopOf="@id/question_5"
                app:layout_constraintBottom_toBottomOf="@id/question_5"
                app:layout_constraintStart_toEndOf="@id/question_5"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/recode"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/sound_wave_image"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/question_layout"
            app:layout_constraintBottom_toTopOf="@id/button_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/sound_wave"/>

        <include
            android:id="@+id/button_layout"
            layout="@layout/layout_previous_next_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
