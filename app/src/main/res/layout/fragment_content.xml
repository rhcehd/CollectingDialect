<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.example.collectingdialect.ui.content.ContentViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_light"
            android:foreground="#44000000"
            android:scaleType="centerCrop"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_title_layout"
            android:layout_width="@dimen/title_layout_width"
            android:layout_height="@dimen/title_layout_height"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintVertical_bias="@dimen/title_layout_vertical_bias"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:id="@+id/main_title_line_top"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@android:color/white"/>

            <TextView
                android:id="@+id/region_select_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/content"
                android:fontFamily="@font/a_gothic_17"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_layout_text_size"/>

            <View
                android:id="@+id/main_title_line_bottom"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@android:color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_script"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:layout_constraintTop_toBottomOf="@id/content_title_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="20dp"
            android:background="@drawable/button_script"
            android:onClick="@{viewModel::onClickScript}"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_interview"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toBottomOf="@id/button_script"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="20dp"
            android:background="@drawable/button_interview"
            android:onClick="@{viewModel::onClickInterview}"/>

        <include
            android:id="@+id/button_layout"
            layout="@layout/layout_previous_next_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintBottom_toBottomOf="parent"
            bind:viewModel="@{viewModel}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
