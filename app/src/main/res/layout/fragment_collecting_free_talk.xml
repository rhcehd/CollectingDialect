<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.example.collectingdialect.ui.collecting.freetalk.CollectingFreeTalkViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/collecting_title_layout"
            layout="@layout/layout_collecting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/script_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/collecting_title_layout"
            app:layout_constraintBottom_toTopOf="@id/free_talk_image"
            android:paddingVertical="30dp">

            <TextView
                android:id="@+id/free_talk_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/object_name_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <ImageView
            android:id="@+id/free_talk_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/script_title_layout"
            app:layout_constraintBottom_toTopOf="@id/previous_image_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/previous_image_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintTop_toBottomOf="@id/free_talk_image"
            app:layout_constraintBottom_toTopOf="@id/collecting_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/next_image_button"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:onClick="@{(view) -> viewModel.onClickPreviousImageButton(view, freeTalkImage)}"/>

        <ImageButton
            android:id="@+id/next_image_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintTop_toBottomOf="@id/free_talk_image"
            app:layout_constraintBottom_toTopOf="@id/collecting_layout"
            app:layout_constraintStart_toEndOf="@id/previous_image_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            android:onClick="@{(view) -> viewModel.onClickNextImageButton(view, freeTalkImage)}"/>

        <include
            android:id="@+id/collecting_layout"
            layout="@layout/layout_collecting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
